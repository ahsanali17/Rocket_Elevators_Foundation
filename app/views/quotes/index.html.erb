<html>

    <head>

        <%# <%= javascript_include_tag "scripts"%>
        <%= javascript_include_tag "quote" %>
         
		<%# <script>var plugin_path = 'assets/plugins/';</script> %>
		<%# <script src="assets/plugins/jquery/jquery-3.3.1.min.js"></script> %>

    </head>
    
	
    <body class="smoothscroll enable-animation">
        <!-- wrapper -->
		<div id="wrapper">
       
            <!-- PAGE HEADER -->
                <section class="page-header page-header-xlg parallax parallax-4" style = "background-image: url(<%= asset_path("Rocket_Elevator_Assets/Quote/AdobeStock_556688421.jpg") %>)">
                    <div class="overlay dark-4"><!-- dark overlay [1 to 9 opacity] --></div>

                    <div class="container">

                        <div class="bold font-raleway wow fadeInUp animated">
                            <h2 class="fs-55 fw-400 text-center">GET A SUBMISSION NOW!</h2>
                        </div>

                    </div>
                </section>
            <!-- /PAGE HEADER -->

            

            <!-- BUTTON CALLOUT -->
                <div class="callout alert alert-border mt-1 mb-1">

                    <div class="row">

                        <div class="col-md-7 col-sm-8"><!-- left text -->
                            <h3><strong>Questions?</strong></h3>
                            <p class="font-lato fs-35">
                                We are here to help you!
                            </p>
                        </div><!-- /left text -->
                
                        
                        <div class="col-md-4 col-sm-4 text-right"><!-- right btn -->
                            <a class="btn btn-outline-danger" href="index.html#contact">CONTACT US <i class="fa fa-angle-right"></i></a>
                        </div><!-- /right btn -->

                    </div>

                </div>
            <!-- /BUTTON CALLOUT -->


            <!-- QUOTE FORM -->			
                <!-- SECTION TITLE -->
                    <section class="section-xs">
                        <div class="container">

                            <div class="heading-title heading-dotted text-center">
                                <h2 style="font-family: Garamond, Times, serif;">Price Estimation Form</h2>
                            </div>					
                        </div>
                    </section>
                <!-- /SECTION TITLE -->

                    
                <!-- BOX SELECTION -->			
                    <div class="card card-default">
                        <div class="card-block">

                            <!-- /SELECTION -->

                                <p style="font-size: 20px; color:black">Please select your type building</p>

                                <div class="fancy-form fancy-form-select">
                                        <select class="form-control select2" id="mySelectBuilding">
                                            <option name="typeSelectl" value="select">--- Select ---</option>
                                            <option name="typeResidential" value="residential">Residential</option>
                                            <option name="typeCommercial" value="commercial">Commercial</option>
                                            <option name="typeCorporate" value="corporate">Corporate</option>
                                            <option name="typeHybrid" value="hybrid">Hybrid</option>
                                        </select>					
                                    <!--
                                        .fancy-arrow
                                        .fancy-arrow-double
                                    -->
                                    <i class="fancy-arrow-"></i>
                                </div>
                            <!-- /SELECTION -->


                            <hr class="m-30" /><!-- 1px line separator -->


                            <!-- BUILDING CHOICE FIELDS -->
                                <form action="/quotes" class="test" id="fieldsChoice" method="post">
                                    <!-- RESIDENTIAL -->
                                        <div id="residential" class="showType" style="margin-left: 30px;">

                                            <h2 class="fs-17">RESIDENTIAL DETAIL</h2>
                                        
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label>No. of floor</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputFloorResidential" oninput="validity.valid||(value='');">
                                                </div>
                                            
                                                <div class="col-md-2">
                                                    <label>No. of apartment</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputApartmentsResidential" oninput="validity.valid||(value='');">
                                                </div>
                                            
                                                <div class="col-md-2">
                                                    <label>No. of basement</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputBasementResidential" oninput="validity.valid||(value='');">
                                                </div>									
                                            </div>

                                            <!--SUBMIT BUTTON -->
                                                <input type="submit" value="Submit This Form">
                                            <!--SUBMIT BUTTON -->

                                        </div>
                                    <!-- /RESIDENTIAL -->

                                    <!-- COMMERCIAL -->
                                        <div id="commercial" class="showType" style="margin-left: 30px;">

                                            <h2 class="fs-17">COMMERCIAL DETAIL</h2>

                                            <div class="row ">
                                                <div class="col-md-2">
                                                    <label>No. of commerce</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputCommerceCommercial" oninput="validity.valid||(value='');">
                                                </div>
                                                <div class="col-md-2">
                                                    <label>No. of floor</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputFloorCommercial" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of basements</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputBasementsCommercial" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of parking</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputParkingCommercial" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of elevators cages</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputCagesCommercial" oninput="validity.valid||(value='');">
                                                </div>
                                            </div>

                                            <!--SUBMIT BUTTON -->
                                                <input type="submit" value="Submit This Form">
                                            <!--SUBMIT BUTTON -->

                                        </div>
                                    <!-- /COMMERCIAL -->

                                    <!-- CORPORATE -->
                                        <div id="corporate" class="showType" style="margin-left: 30px;">

                                            <h2 class="fs-17">CORPORATE DETAIL</h2>

                                            <div class="row ">
                                                <div class="col-md-2">
                                                    <label>No. of commerce</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputCommerceCorporate" oninput="validity.valid||(value='');">
                                                </div>
                                                <div class="col-md-2">
                                                    <label>No. of floor</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputFloorCorporate" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of basements</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputBasementsCorporate" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of parking</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputParkingCorporate" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of occupants per floor</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputOccupantsCorporate" oninput="validity.valid||(value='');">
                                                </div>
                                            </div>

                                            <!--SUBMIT BUTTON -->
                                                <input type="submit" value="Submit This Form">
                                            <!--SUBMIT BUTTON -->

                                        </div>
                                    <!-- /CORPORATE -->

                                    <!-- HYBRID -->
                                        <div id="hybrid" class="showType" style="margin-left: 30px;">

                                            <h2 class="fs-17">HYBRID DETAIL</h2>

                                            <div class="row ">
                                                <div class="col-md-2">
                                                    <label>No. of distinct businesses</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputCommerceHybrid" oninput="validity.valid||(value='');">
                                                </div>
                                                <div class="col-md-2">
                                                    <label>No. of floor</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputFloorHybrid" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of basements</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputBasementsHybrid" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of parking</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputParkingHybrid" oninput="validity.valid||(value='');">
                                                </div>

                                                <div class="col-md-2">
                                                    <label>No. of occupants per floor</label>
                                                    <input type="number" value="0" min="0" class="form-control" id="inputOccupantsHybrid" oninput="validity.valid||(value='');">
                                                </div>
                                                <div class="col-md-2">
                                                    <label>No. of activity hours per day:</label>
                                                    <input type="number" value="0" min="0" max="24" class="form-control" id="inputHoursHybrid" oninput="validity.valid||(value='');">
                                                </div>
                                            </div>
                                            <!--SUBMIT BUTTON -->
                                                <input type="submit" value="Submit This Form">
                                            <!--SUBMIT BUTTON -->
                                        </div>
                                    <!-- /HYBRID -->
                                </form>
                            <!-- /BUILDING CHOICE FIELDS -->


                            <hr class="m-30" /><!-- 1px line separator -->


                            <!-- SERVICE CHOICE FIELDS -->
                                    <p style="font-size: 20px; color:black">Please select service line</p>
                                <!-- STANDARD -->
                                    <label class="typeService">
                                        <input type="radio" name="radio-btn" value="1" checked id="standard">
                                        <i></i> Standard (Price of each elevator: $7,565.00)
                                    </label>
                                <!-- /STANDARD -->

                                <!-- PREMIUM-->
                                    <label class="typeService">
                                        <input type="radio" name="radio-btn" value="2" id="premium">
                                        <i></i> Premium (Price of each elevator: $12,345.00)
                                    </label>
                                <!-- /PREMIUM -->

                                <!-- EXCELIUM-->
                                    <label class="typeService">
                                        <input type="radio" name="radio-btn" value="3" id="excelium">
                                        <i></i> Excelium (Price of each elevator: $15,400.00)
                                    </label>
                                <!-- /EXCELIUM -->
                            <!-- SERVICE CHOICE FIELDS -->

                            <hr class="m-30" /><!-- 1px line separator -->


                            <div class="col-md-6">
                                <p style="font-size: 20px; color:black">For this project we will use:</p>
                                <p id="showColumns"></p>
                                <p id="showElevators"></p>
                            </div>


                            <hr class="m-30" /><!-- 1px line separator -->


                            <!-- COST -->
                                <div class="heading-title" style="margin-right: 43%;">
                                    <ul class="float-right m-0 list-inline mobile-block">
                                        <li>COST:<label id="cost"></label></li>
                                        <li>INSTALLATION:<label id="installation"></label></li>
                                        <li>TOTAL:<label id="total"></label></li>
                                    </ul>
                                </div>						
                            <!-- /COST -->
                        </div>
                    </div>
                <!-- /BOX SELECTION -->
            <!-- /QUOTE FORM -->
        <div>
        <!-- /wrapper -->

        <!-- SCROLL TO TOP -->
		<a href="#" id="toTop"></a>
	
    </body>
</html>